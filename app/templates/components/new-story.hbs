{{#if addNewStory}}
<h1>New Story</h1>
<div>
 <form>
   <div class="form-group">
     <label for="author">Author:</label>
     {{input value=author id="author"}}
   </div>

   <div class="form-group">
     <label for="headline">Title:</label>
     {{input value=headline id="headline"}}
   </div>

   <div class="form-group">
     <label for="image">Image URL:</label>
     {{input value=image id="image"}}
   </div>

   <button {{action 'saveStory'}}>Save</button>
 </form>
</div>
{{else}}
  <button {{action 'storyFormShow'}}>Story me!</button>
{{/if}}
